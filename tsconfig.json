{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2016"],
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@application/*": ["application/*"],
      "@domain/*": ["domain/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@presentation/*": ["presentation/*"],
      "@mocks/*": ["__mocks__/*"]
    },
    "types": ["node", "@types/jest"],
    "resolveJsonModule": false,
    "sourceMap": true,
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "coverage", "jest.config.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
